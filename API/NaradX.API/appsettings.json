{
  "Application": {
    "Name": "NaradX WhatsApp Bulk Messaging",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com",
      "https://app.yourdomain.com"
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=PROD_SERVER;Database=NaradX_Production;"
  },
  "WhatsAppApi": {
    "BaseUrl": "https://graph.facebook.com/v18.0",
    "TimeoutSeconds": 60,
    "RetryCount": 5
  },
  "Jwt": {
    "Issuer": "NaradX.Production",
    "Audience": "NaradX.Users.Production",
    "ExpiryMinutes": 30
  }
}