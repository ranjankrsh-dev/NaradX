@using NaradX.Web.ViewModels.Contact
@model ContactViewModel
@{
    ViewData["Title"] = "Manage Contacts";
}

@section Styles {
    <link href="~/css/contact/contact.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="ui-view">
        <div class="row mb-2">
            <div class="col-md-12">
                <h5>Manage Contacts</h5>
            </div>
        </div>
        <!-- Filter Box -->
        <div class="filter-box" id="filterBox">
            @*             <form id="filterForm" method="post" asp-action="ManageContacts">
                @Html.AntiForgeryToken() *@
            <div class="row">
                <div class="col-md-3">
                    <div class="callout callout-warning mt-0 mb-0">
                        <small class="text-muted font-sm">Name</small>
                        <br>
                        <input id="filterName" type="text" class="form-control font-xs" placeholder="Enter name" autocomplete="off" title="Name">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="callout callout-success mt-0 mb-0">
                        <small class="text-muted font-sm">Phone No.</small>
                        <br>
                        <input id="filterPhone" type="text" class="form-control font-xs" placeholder="Enter phone number" autocomplete="off" title="Phone">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="callout callout-primary mt-0 mb-0">
                        <small class="text-muted font-sm">Status</small>
                        <br>
                        <select id="filterStatus" class="form-control font-sm" title="Status">
                            <option value="">All</option>
                            <option value="enabled">Enabled</option>
                            <option value="disabled">Disabled</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="button" class="btn btn-outline-danger mr-2" title="Clear All" onclick="clearFilters();">Clear All</button>
                    <button type="button" class="btn btn-outline-primary" title="Apply" onclick="applyFilter();">Apply</button>
                </div>
            </div>
            @*  </form> *@
        </div>

        <!-- Employee Grid -->
        <div class="card nx-card">
            <div class="card-body nx-card-body">
                <!-- Search and Actions -->
                <div class="row mb-2">
                    <div class="col-md-8">
                        @*                         <form id="searchForm" method="post" asp-action="ManageContacts">
                            @Html.AntiForgeryToken() *@
                        <div class="input-group">
                            <button class="btn btn-outline-secondary" id="filterBtn" type="button">
                                <svg class="icon-filter" viewBox="0 0 24 24" width="16" height="16">
                                    <path d="M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z" />
                                </svg> Filter
                            </button>
                            <input id="searchInput" type="text" class="form-control" placeholder="Search contacts..." value="@Model.Filters?.SearchTerm">
                            <button class="btn btn-outline-secondary" type="button" title="Clear" onclick="clearFilters();">
                                <i class="fa fa-remove"></i>
                            </button>
                            <button class="btn btn-outline-secondary" type="submit" title="Search" onclick="applySearch();">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                        @*   </form> *@
                    </div>
                    <div class="col-md-4">
                        <div class="text-right">
                            <button class="btn btn-warning text-white font-weight-bold" id="newEmployeeBtn">
                                <i class="fa fa-user-plus"></i>  Add Contact
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <button id="openBulkUploadModal" class="btn btn-outline-primary">
                            <i class="fa fa-cloud-upload"></i>  Bulk Contact Upload
                        </button>
                    </div>
                    <div class="col-md-6"></div>
                    <div class="col-md-3" style="display:none">
                        <a class="nav-link font-weight-bold text-right" href="#"><i class="fa fa-download"></i> Export All</a>
                    </div>
                </div>

                <div id="contactsTableContainer">
                    @await Html.PartialAsync("_ContactTablePartial", Model)
                </div>

            </div>
        </div>
    </div>
</div>

<!-- New Employee Modal (Right Side) -->
<div>
    <form id="createForm" method="post" asp-action="AddContact">
        @Html.AntiForgeryToken()
        <div class="modal-side" id="newEmployeeModal" tabindex="-1" aria-hidden="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create new contact</h5>
                    <div>
                        <i class="icon-size-fullscreen expand-btn" id="expandModal"></i>
                        <i class="icon-close expand-btn" id="closeModal"></i>
                    </div>
                </div>
                <div class="modal-body pt-2">
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label">First Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" autocomplete="off" placeholder="Enter first name" asp-for="Contact.FirstName">
                            <span asp-validation-for="Contact.FirstName" class="text-danger font-sm"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Middle Name</label>
                            <input type="text" class="form-control" autocomplete="off" placeholder="Enter middle name" asp-for="Contact.MiddleName">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label">Last Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" autocomplete="off" placeholder="Enter last name" asp-for="Contact.LastName">
                            <span asp-validation-for="Contact.LastName" class="text-danger font-sm"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label">Country<span class="text-danger">*</span></label>
                            <select id="CountryDropdown" class="form-control" asp-for="Contact.CountryId" onchange="loadLanguages(this,'singleCreate');">
                                <option value="-1" selected disabled>Select Country</option>
                                @foreach (var country in Model.Countries)
                                {
                                    <option value="@country.Id">@country.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Contact.CountryId" class="text-danger font-sm"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Language<span class="text-danger">*</span></label>
                            <select id="singleLanguage" class="form-control" asp-for="Contact.LanguageId">
                            </select>
                            <span asp-validation-for="Contact.LanguageId" class="text-danger font-sm"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label">Phone Number<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-prepend">
                                    <span class="input-group-text">+91</span>
                                </span>
                                <input type="tel" class="form-control" placeholder="Enter phone number" autocomplete="off" asp-for="Contact.PhoneNumber">
                            </div>
                            <span asp-validation-for="Contact.PhoneNumber" class="text-danger font-sm"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" autocomplete="off" placeholder="Enter email address" asp-for="Contact.Email">
                            <span asp-validation-for="Contact.Email" class="text-danger font-sm"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label">Company</label>
                            <input type="text" class="form-control" autocomplete="off" placeholder="Enter company name" asp-for="Contact.Company">
                            <span asp-validation-for="Contact.Company" class="text-danger font-sm"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Job Tittle/Position</label>
                            <input type="text" class="form-control" autocomplete="off" placeholder="Enter job tittle" asp-for="Contact.JobTitle">
                            <span asp-validation-for="Contact.JobTitle" class="text-danger font-sm"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Contact Source</label>
                            <select class="form-control" asp-for="Contact.ContactSource">
                                @{
                                    if (Model.ConfigValues != null && Model.ConfigValues.TryGetValue("CONTACT_SOURCE", out var configValues))
                                    {
                                        foreach (var value in configValues)
                                        {
                                            <option value="@value.Value">@value.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Channel Preference</label>
                            <select class="form-control" asp-for="Contact.ChannelPreference">
                                @{
                                    if (Model.ConfigValues != null && Model.ConfigValues.TryGetValue("CHHANNEL_PREFERENCE", out var configValues))
                                    {
                                        foreach (var value in configValues)
                                        {
                                            <option value="@value.Value">@value.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" value="@Model.Contact?.Id" asp-for="Contact.Id" />
                    <input id="RequestType" type="hidden" value="@Model.RequestType" asp-for="RequestType"/>
                    <button type="button" class="btn btn-outline-danger mr-3 w-15" id="cancelModal">Cancel</button>
                    <button type="submit" class="btn btn-outline-success  w-15" id="saveContact">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Bulk Contact Upload Modal -->
<div class="modal fade" id="bulkUploadModal" tabindex="-1" role="dialog" aria-labelledby="bulkUploadModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bulk Contact Upload</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="icon-close"></i>
                </button>
            </div>
            <div class="modal-body">

                <!-- Step Indicator -->
                <div class="step-indicator">
                    <div class="step active" id="step1-indicator" style="align-items: start;">
                        <div class="step-icon font-sm">1</div>
                        <div class="step-label font-sm">Contact Details</div>
                    </div>
                    <div class="step" id="step2-indicator" style="align-items: center;">
                        <div class="step-icon font-sm">2</div>
                        <div class="step-label font-sm">Validation</div>
                    </div>
                    <div class="step" id="step3-indicator" style="align-items: end;">
                        <div class="step-icon font-sm">3</div>
                        <div class="step-label font-sm">Review & Confirm</div>
                    </div>
                </div>

                <!-- Step 1: Contact Details -->
                <div id="step1" class="step-content">
                    <h6 class="mb-2 mt-3 font-sm">Contact Details</h6>
                    <div class="form-section pl-3 pr-3 pt-1 pb-0">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="country" class="form-label">Country <span class="text-danger">*</span></label>
                                <select class="form-control" id="bulkCountry" onchange="loadLanguages(this,'bulkUpload');">
                                    <option value="-1" selected disabled>Select Country</option>
                                    @foreach (var country in Model.Countries)
                                    {
                                        <option value="@country.Id">@country.Name</option>
                                    }
                                </select>
                                <span id="bulkCountryMessage" class="text-danger font-sm"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="language" class="form-label">Language <span class="text-danger">*</span></label>
                                <select class="form-control" id="bulkLanguage">
@*                                     <option selected disabled>Select Language</option> *@
                                </select>
                                <span id="bulkLanguageMessage" class="text-danger font-sm"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="contactSource" class="form-label">Contact Source <span class="text-danger">*</span></label>
                                <select class="form-control" id="bulkContactSource">
                                    <option selected disabled>Select Source</option>
                                    @if (Model.ConfigValues != null && Model.ConfigValues.TryGetValue("CONTACT_SOURCE", out var configValues))
                                    {
                                        foreach (var value in configValues)
                                        {
                                            <option value="@value.Value">@value.Text</option>
                                        }
                                    }
                                </select>
                                <span id="bulkContactSourceMessage" class="text-danger font-sm"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="channelPreference" class="form-label">Channel Preference <span class="text-danger">*</span></label>
                                <select class="form-control" id="bulkChannelPreference">
                                    <option selected disabled>Select Preference</option>
                                    @if (Model.ConfigValues != null && Model.ConfigValues.TryGetValue("CHHANNEL_PREFERENCE", out var configValues1))
                                    {
                                        foreach (var value in configValues1)
                                        {
                                            <option value="@value.Value">@value.Text</option>
                                        }
                                    }
                                </select>
                                <span id="bulkChannelPreferenceMessage" class="text-danger font-sm"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6"><h6 class="font-sm">Upload Contact File</h6></div>
                        <div class="col-md-6">
                            <a class="nav-link font-sm font-weight-bold text-right" href="@Url.Action("DownloadTemplateFile", "Contact")"><i class="fa fa-download"></i> Download Template</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="upload-area" id="uploadArea">
                                <h5>Drag & Drop your file here</h5>
                                <p class="text-muted mb-0">Supported formats: CSV, XLSX (Max 10MB)</p>
                                <button type="button" class="btn btn-outline-primary mt-2" id="browseFileBtn">
                                    <i class="fa fa-file me-2"></i> Browse Files
                                </button>
                                <input type="file" id="fileInput" accept=".csv,.xlsx,.xls" style="display: none;">
                                <span id="bulkChannelPreferenceMessage" class="text-danger font-sm" style="display:flex;"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mt-3 d-none" id="fileInfo">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-file-excel text-success me-2"></i>
                                    <div style="word-break:break-all;">
                                        <span class="file-name" id="fileName">contacts_sample.xlsx</span>
                                        <span class="file-size ms-2" id="fileSize">(2.4 MB)</span>
                                    </div>
                                    <button type="button" class="btn btn-sm btn-outline-danger ms-auto ml-2" id="removeFileBtn">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 2: Validation -->
                <div id="step2" class="step-content d-none">
                    <h6 class="mb-2 mt-3 font-sm">Validation Results</h6>

                    <div class="alert alert-info d-flex align-items-center pl-1">
                        <i class="fa fa-info-circle pr-2"></i>
                        <div>We've validated your file. Please review the results below.</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="callout callout-primary mt-0 mb-2">
                                <small class="text-muted font-sm">Total Rows</small>
                                <div class="text-primary font-weight-bold font-lg" id="totalRows">0</div>
                            </div>
                            <hr class="mt-0 mb-0 border-primary">
                        </div>
                        <div class="col-md-4">
                            <div class="callout callout-success mt-0 mb-2">
                                <small class="text-muted font-sm">Valid Rows</small>
                                <div class="text-success font-weight-bold font-lg" id="validRows">0</div>
                            </div>
                            <hr class="mt-0 mb-0 border-success">
                        </div>
                        <div class="col-md-4">
                            <div class="callout callout-danger mt-0 mb-2">
                                <small class="text-muted font-sm">Invalid Rows</small>
                                <div class="text-danger font-weight-bold font-lg" id="invalidRows">0</div>
                            </div>
                            <hr class="mt-0 mb-0 border-danger">
                        </div>
                    </div>

                    <div id="invalidRowsSection">
                        <h6>Invalid Records</h6>
                        <div class="table-responsive" style="max-height: 300px;overflow-y:scroll;">
                            <table class="table table-sm table-bordered tableFixHead mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Row #</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Phone</th>
                                        <th>Error</th>
                                    </tr>
                                </thead>
                                <tbody id="invalidRowsTable">
                                    <!-- Invalid rows will be populated here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Step 3: Review & Confirm -->
                <div id="step3" class="step-content d-none">
                    <h6 class="mb-2 mt-3 font-sm">Review & Confirm</h6>
                    <div class="alert alert-success d-flex align-items-center pl-1">
                        <i class="fa fa-check-circle pr-2"></i>
                        <div>Your file has been validated successfully. Ready to import contacts.</div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="callout callout-primary mt-0 mb-2">
                                <small class="text-muted font-sm">Total Contacts</small>
                                <div class="text-primary font-weight-bold font-lg" id="reviewTotalRows">0</div>
                            </div>
                            <hr class="mt-0 mb-0 border-primary">
                        </div>
                        <div class="col-md-4">
                            <div class="callout callout-success mt-0 mb-2">
                                <small class="text-muted font-sm">Valid Contactss</small>
                                <div class="text-success font-weight-bold font-lg" id="reviewValidRows">0</div>
                            </div>
                            <hr class="mt-0 mb-0 border-success">
                        </div>
                        <div class="col-md-4">
                            <div class="callout callout-warning mt-0 mb-2">
                                <small class="text-muted font-sm">Skipped</small>
                                <div class="text-warning font-weight-bold font-lg" id="reviewSkippedRows">0</div>
                            </div>
                            <hr class="mt-0 mb-0 border-warning">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h6 class="mb-2 mt-3 font-sm">Upload Summary</h6>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-section table-responsive">
                                <table class="table table-borderless mb-0">
                                    <tr>
                                        <td class="text-muted border-top-0">Batch ID:</td>
                                        <td class="fw-bold border-top-0" id="reviewBatchId">-</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Country:</td>
                                        <td class="fw-bold" id="reviewCountry">-</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Language:</td>
                                        <td class="fw-bold" id="reviewLanguage">-</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-section table-responsive">
                                <table class="table table-borderless mb-0">
                                    <tr>
                                        <td class="text-muted border-top-0">Contact Source:</td>
                                        <td class="fw-bold border-top-0" id="reviewContactSource">-</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Channel Preference:</td>
                                        <td class="fw-bold" id="reviewChannelPreference">-</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">File Name:</td>
                                        <td class="fw-bold" id="reviewFileName">-</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning pl-1">
                        <i class="fa fa-exclamation-triangle pr-2"></i>
                        <strong>Note:</strong> This action will add <span id="confirmValidRows">0</span> new contacts to your database. This process may take a few minutes.
                    </div>
                </div>

            </div>
            <div class="modal-footer" style="display:block;">
                <div class="row">
                    <div class="col-md-6"><button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button></div>
                    <div class="col-md-6" style="float:right;">
                        <div class="ms-auto">
                            <button type="button" class="btn btn-warning text-white mr-2 d-none" id="backBtn">Back</button>
                            <button type="button" class="btn btn-primary" id="nextBtn">Next</button>
                            <button type="button" class="btn btn-success d-none" id="submitBtn">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Backdrop -->
<div class="modal-backdrop fade" id="modalBackdrop" style="display: none;"></div>

<form id="commonFilterForm" method="post" asp-action="ManageContacts">
    @Html.AntiForgeryToken()

    <!-- Hidden fields to maintain filter state -->
    <input type="hidden" name="pageNumber" id="pageNumber" value="@Model.Filters?.PageNumber" />
    <input type="hidden" name="searchTerm" id="searchTerm" value="@Model.Filters?.SearchTerm" />
    <input type="hidden" name="name" id="nameFilter" value="@Model.Filters?.Name" />
    <input type="hidden" name="phone" id="phoneFilter" value="@Model.Filters?.Phone" />
    <input type="hidden" name="status" id="statusFilter" value="@Model.Filters?.Status" />
</form>

@section Scripts {
    <script src="~/js/contact/contact.js"></script>
}

